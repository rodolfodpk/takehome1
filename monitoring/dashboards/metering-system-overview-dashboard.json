{
  "dashboard": {
    "title": "Metering - System Overview",
    "tags": ["metering", "overview", "system"],
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Events per Second",
        "type": "gauge",
        "targets": [
          {
            "expr": "rate(metering_events_ingested_total{type=\"total\"}[1m])",
            "legendFormat": "Events/sec",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "min": 0,
            "max": 20000,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 5000, "color": "yellow"},
                {"value": 10000, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "P99 Processing Latency",
        "type": "gauge",
        "targets": [
          {
            "expr": "metering_events_processing_latency_seconds{quantile=\"0.99\"}",
            "legendFormat": "P99 Latency",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "max": 0.2,
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 0.2, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Error Rate %",
        "type": "gauge",
        "targets": [
          {
            "expr": "(rate(metering_events_ingestion_errors_total[1m]) / rate(metering_events_ingested_total{type=\"total\"}[1m])) * 100",
            "legendFormat": "Error Rate",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 1,
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Redis P95 Latency",
        "type": "gauge",
        "targets": [
          {
            "expr": "metering_redis_storage_latency_seconds{quantile=\"0.95\"}",
            "legendFormat": "Redis P95",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "max": 0.02,
            "decimals": 4,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.01, "color": "yellow"},
                {"value": 0.02, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "DB P95 Latency",
        "type": "gauge",
        "targets": [
          {
            "expr": "metering_db_persistence_latency_seconds{quantile=\"0.95\"}",
            "legendFormat": "DB P95",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 8},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "max": 0.1,
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.05, "color": "yellow"},
                {"value": 0.1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Postgres Circuit Breaker",
        "type": "stat",
        "targets": [
          {
            "expr": "resilience4j_circuitbreaker_state{name=\"postgres\"}",
            "legendFormat": "Postgres",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 8},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "mappings": [
              {"type": "value", "options": {"0": {"text": "CLOSED", "color": "green"}}, "value": "0"},
              {"type": "value", "options": {"1": {"text": "OPEN", "color": "red"}}, "value": "1"},
              {"type": "value", "options": {"2": {"text": "HALF_OPEN", "color": "yellow"}}, "value": "2"}
            ]
          }
        }
      },
      {
        "id": 7,
        "title": "Redis Circuit Breaker",
        "type": "stat",
        "targets": [
          {
            "expr": "resilience4j_circuitbreaker_state{name=\"redis\"}",
            "legendFormat": "Redis",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "mappings": [
              {"type": "value", "options": {"0": {"text": "CLOSED", "color": "green"}}, "value": "0"},
              {"type": "value", "options": {"1": {"text": "OPEN", "color": "red"}}, "value": "1"},
              {"type": "value", "options": {"2": {"text": "HALF_OPEN", "color": "yellow"}}, "value": "2"}
            ]
          }
        }
      },
      {
        "id": 8,
        "title": "Memory Usage %",
        "type": "gauge",
        "targets": [
          {
            "expr": "(jvm_memory_used_bytes{area=\"heap\"} / jvm_memory_max_bytes{area=\"heap\"}) * 100",
            "legendFormat": "Heap Usage %",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 8},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 80, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Events per Second Trend",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(metering_events_ingested_total{type=\"total\"}[1m])",
            "legendFormat": "Events/sec",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
