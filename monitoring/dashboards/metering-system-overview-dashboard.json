        "targets": [
          {
            "expr": "count(resilience4j_circuitbreaker_state == 1)",
            "legendFormat": "Open Circuit Breakers",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 40},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 16,
        "title": "High Latency Alerts",
        "type": "stat",
        "targets": [
          {
            "expr": "count(metering_events_processing_latency_seconds{quantile=\"0.99\"} > 0.1)",
