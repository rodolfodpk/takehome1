{
  "dashboard": {
    "title": "Metering - Resilience4j Metrics",
    "tags": ["metering", "resilience4j", "technical"],
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Postgres Circuit Breaker State",
        "type": "stat",
        "targets": [
          {
            "expr": "resilience4j_circuitbreaker_state{name=\"postgres\"}",
            "legendFormat": "Postgres",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "mappings": [
              {"type": "value", "options": {"0": {"text": "CLOSED", "color": "green"}}, "value": "0"},
              {"type": "value", "options": {"1": {"text": "OPEN", "color": "red"}}, "value": "1"},
              {"type": "value", "options": {"2": {"text": "HALF_OPEN", "color": "yellow"}}, "value": "2"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "red"},
                {"value": 2, "color": "yellow"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Redis Circuit Breaker State",
        "type": "stat",
        "targets": [
          {
            "expr": "resilience4j_circuitbreaker_state{name=\"redis\"}",
            "legendFormat": "Redis",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "mappings": [
              {"type": "value", "options": {"0": {"text": "CLOSED", "color": "green"}}, "value": "0"},
              {"type": "value", "options": {"1": {"text": "OPEN", "color": "red"}}, "value": "1"},
              {"type": "value", "options": {"2": {"text": "HALF_OPEN", "color": "yellow"}}, "value": "2"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "red"},
                {"value": 2, "color": "yellow"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Circuit Breaker Calls - Postgres",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(resilience4j_circuitbreaker_calls_total{name=\"postgres\"}[1m])",
            "legendFormat": "{{kind}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 2
          }
        }
      },
      {
        "id": 4,
        "title": "Circuit Breaker Calls - Redis",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(resilience4j_circuitbreaker_calls_total{name=\"redis\"}[1m])",
            "legendFormat": "{{kind}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 2
          }
        }
      },
      {
        "id": 5,
        "title": "Postgres Circuit Breaker Failure Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "resilience4j_circuitbreaker_failure_rate{name=\"postgres\"}",
            "legendFormat": "Postgres Failure Rate",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Redis Circuit Breaker Failure Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "resilience4j_circuitbreaker_failure_rate{name=\"redis\"}",
            "legendFormat": "Redis Failure Rate",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Retry Attempts - Postgres",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(resilience4j_retry_calls_total{name=\"postgres\"}[1m])",
            "legendFormat": "{{kind}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22},
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 2
          }
        }
      },
      {
        "id": 8,
        "title": "Retry Attempts - Redis",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(resilience4j_retry_calls_total{name=\"redis\"}[1m])",
            "legendFormat": "{{kind}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 22},
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 2
          }
        }
      },
      {
        "id": 9,
        "title": "Time Limiter Timeouts",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(resilience4j_timelimiter_calls_total[1m])",
            "legendFormat": "{{name}} - {{kind}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 30},
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 2
          }
        }
      }
    ],
    "schemaVersion": 27,
    "version": 0
  }
}

